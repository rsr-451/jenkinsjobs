pipeline {
    agent any

    stages {
        stage('ClearPreviousTemp') {
            steps {
                sh '''sudo rm -f /home/raja/Documents/jenkins_com.*'''
            }}
         stage('CSR Generation') {
            steps {
                sh '''sudo openssl req -new -newkey rsa:2048 -nodes -out /home/raja/Documents/jenkins_com.csr -keyout /home/raja/Documents/jenkins_com.key -subj "/C=IN/ST=/L=/O=/CN=rajareddy.com"'''
            }   
        }
         stage('CSR Check') {
            steps {
                sh '''sudo openssl req -in /home/raja/Documents/jenkins_com.csr -noout -text'''
            }   
        }
    }
}
